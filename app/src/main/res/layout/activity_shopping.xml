<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.wrdlbrnft.searchablerecyclerviewdemo.ui.activities.ShoppingActivity">
    <TextView
        android:id="@+id/grocery_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/bakery_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAppearance="@style/GroceryLabel"
        />
    <TextView
        android:id="@+id/bakery_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/GroceryList"/>
    <TextView
        android:id="@+id/produce_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAppearance="@style/GroceryLabel"
        />
    <TextView
        android:id="@+id/produce_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/GroceryList"/>
    <TextView
        android:id="@+id/deli_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAppearance="@style/GroceryLabel"
        />
    <TextView
        android:id="@+id/deli_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/GroceryList"/>
    <TextView
        android:id="@+id/drygoods_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAppearance="@style/GroceryLabel"
        />
    <TextView
        android:id="@+id/drygoods_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/GroceryList"/>
    <TextView
        android:id="@+id/meat_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAppearance="@style/GroceryLabel"
        />
    <TextView
        android:id="@+id/meat_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/GroceryList"/>


</LinearLayout>
